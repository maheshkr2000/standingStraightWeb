{
  "name": "standing-straight",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "web",
    "studio"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:studio": "npm run dev --workspace=studio",
    "dev:all": "concurrently \"npm run dev:studio\" \"npm run dev\"",
    "build": "npm run build --workspace=web",
    "build:studio": "npm run build --workspace=studio",
    "build:all": "npm run build:studio && npm run build",
    "build:vercel": "npm run build:studio && npm run build",
    "lint": "npm run lint --workspace=web",
    "lint:studio": "npm run lint --workspace=studio",
    "lint:all": "npm run lint && npm run lint:studio",
    "preview": "npm run preview --workspace=web",
    "studio": "npm run dev --workspace=studio",
    "clean": "rm -rf node_modules web/node_modules studio/node_modules",
    "install:all": "npm install && npm install --workspace=web && npm install --workspace=studio",
    "vercel-build": "npm run build:all"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}